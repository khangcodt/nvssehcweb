<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="2.5"
	client="site"
	method="upgrade">
	<name>mod_viewchallenges</name>
	<author>Chessvn Admin</author>
	<creationDate>Feb 27 2015</creationDate>
	<copyright>Copyright (C) 2005 - 2013 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>khanglq2014@gmail.com</authorEmail>
	<authorUrl>www.chessvn.org</authorUrl>
	<version>2.5.0</version>
	<description>MOD_VIEWCHALLENGES_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_viewchallenges">mod_viewchallenges.php</filename>
		<folder>tmpl</folder>
        <folder>language</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>mod_viewchallenges.xml</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB.mod_viewchallenges.ini</language>
		<language tag="en-GB">language/en-GB.mod_viewchallenges.sys.ini</language>
        <language tag="vi-VN">language/vi-VN.mod_viewchallenges.ini</language>
        <language tag="vi-VN">language/vi-VN.mod_viewchallenges.sys.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_WHO_ONLINE" />
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="showmode"
					type="list"
					default="0"
					label="MOD_ONLINEPLAYERS_SHOWMODE_LABEL"
					description="MOD_ONLINEPLAYERS_SHOWMODE_DESC">
					<option
						value="0">MOD_ONLINEPLAYERS_FIELD_VALUE_NUMBER</option>
					<option
						value="1">MOD_ONLINEPLAYERS_FIELD_VALUE_NAMES</option>
					<option
						value="2">MOD_ONLINEPLAYERS_FIELD_VALUE_BOTH</option>
				</field>
			</fieldset>
			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="0"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="filter_groups"
					type="radio"
					default="0"
					label="MOD_ONLINEPLAYERS_FIELD_FILTER_GROUPS_LABEL"
					description="MOD_ONLINEPLAYERS_FIELD_FILTER_GROUPS_DESC">
					<option
						value="0">JNo</option>
					<option
						value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
